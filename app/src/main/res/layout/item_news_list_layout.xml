<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="@dimen/item_height_news_list"
              android:orientation="vertical"
              android:background="@android:color/white"
              android:paddingBottom="@dimen/margin_middle"
              android:paddingLeft="@dimen/margin_nomal"
              android:paddingRight="@dimen/margin_nomal"
              android:paddingTop="@dimen/margin_middle">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            style="@style/TextNewsTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="2"

            />

        <TextView
            android:id="@+id/time"
            style="@style/TextTiny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:padding="@dimen/margin_tiny"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_tiny"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/author"
            style="@style/TextTiny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingRight="@dimen/margin_nomal"
            />

        <TextView
            android:id="@+id/points"
            style="@style/TextTiny"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            />

        <ImageView
            android:id="@+id/go_external"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:scaleType="center"
            android:src="@drawable/ic_chrome_reader_mode_black_24dp"
            />
    </LinearLayout>
</LinearLayout>